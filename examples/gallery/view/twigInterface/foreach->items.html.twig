<div class="thumbnail width5 {% if match | length > 0 %}markedOtherMatch{% endif %} "  data-name="items[{{index}}]"
     {% if match | length > 0 %} data-toggle="popover" data-content="{{matches}}"  data-title="Woanders vielleicht besser?" {% endif %} >
    <div class="cont">
        <img class="galImg" src="{{item.image_url}}" alt="kein Bild" />
        <div class="overlay span12 ">
            <div class="row-fluid height5">
                <a href="#img{{index}}" data-name="zoom" data-on="click"><div class="tleft span6">zoom</div></a>
                <a data-name="mark" data-on="click" target="_blank" ><div class="tright span6">X</div></a>
            </div>
            <div class="row-fluid height5">
                <a href="#text{{index}}" data-name="zoom" data-on="click"> <div class="bleft span6">text({{item.item_description | length}})</div></a>
                <a href="" target="_blank"><div class="bright span6">www</div></a>
            </div>
        </div>
    </div> 
    <p class="name">{{item.item_name}}</p>
    <div class="lightbox" data-name="bg" data-on="click" id="img{{index}}">
        <div class="box">
            <p class="title">{{item.item_name}}</p>
            <div class="content">
                <img src="{{item.image_url | bigImg}}"> 
                <p> {{item.item_description}}</p>
            </div> 
            <div class="clear"></div>
        </div>
    </div> 

    <div class="lightbox"  data-name="bg" data-on="click" id="text{{index}}">
        <div class="box" >
            <p class="title">{{item.item_name}}</p>
            <div class="content">
                {{item.item_description}}
            </div> 
            <div class="clear"></div>
        </div>
    </div>  

</div>